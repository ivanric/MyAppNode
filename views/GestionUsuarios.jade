          | &#x9;&#x9;&#x9;&#x9; Bajas
        | &#x9;&#x9;&#x9;&#x9;
        label.radio-inline
          input#todos(type='radio', name='iestado', value='-1', checked='checked')
          |  
          | &#x9;&#x9;&#x9;&#x9;&#x9;
          label(for='todos')
            span
          | &#x9;&#x9;&#x9;&#x9;&#x9;Todos
  .col-md-12
    table#table-usuarios.table.texto.table-condenced.display.responsive.nowrap(cellspacing='0', width='100%', style='border: 3px solid #1F2065;')
      thead
        tr
          th #
          th Foto
          th Apellidos y Nombres
          th CÃ©dula
          th(style="text-align:center") Estado
          th(style="text-align:center") Opciones
          //- th B
          //- th H
          //- th V
          //- th UC
      tbody
        each LU,i in LUsuarios
          tr
            td #{i}
            td #{LU.foto}
            td #{LU.ap} #{LU.am} #{LU.nombre}
            td #{LU.ci}
            td
              a.neon-circle.neon-circle-green(href='#', accesskey='#{LU.estado}',style="text-align:center")
                  i.glyphicon.glyphicon-arrow-up
            td(style="text-align:center")
              a.btn-xs.btn.btn-neon.btn-neon-brown(href='#', accesskey='#{LU.codusu}',data-id='#{LU.codusu}')
                  i.fa.fa-edit  Modificar
              &nbsp;    
              a.btn-xs.btn.btn-neon.btn-neon-danger(href='#', accesskey='#{LU.codusu}',data-id='#{LU.codusu}')
                  i.fa.fa-edit  Borrar   
              &nbsp;    
              a.btn-xs.btn.btn-neon.btn-neon-green(href='#', accesskey='#{LU.codusu}',data-id='#{LU.codusu}')
                  i.fa.fa-edit  Habilitar                         
              &nbsp;    
              a.btn-xs.btn.btn-neon.btn-neon-yellow.btn-white-text(href='#', accesskey='#{LU.codusu}',data-id='#{LU.codusu}')
                  i.fa.fa-edit  Ver
              &nbsp;    
              a.btn-xs.btn.btn-neon.btn-neon-blue(href='#', accesskey='#{LU.codusu}',data-id='#{LU.codusu}')
                  i.fa.fa-edit  Acceso                                     
